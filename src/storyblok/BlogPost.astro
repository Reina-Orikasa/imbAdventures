---
import { storyblokEditable, renderRichText } from "@storyblok/astro";
const { blok } = Astro.props;
const content = renderRichText(blok.content);
---

<article {...storyblokEditable(blok)}>
  <img
    src={blok.header.filename}
    class="rounded-b-[2rem] md:rounded-b-[7rem]"
    id="header"
    alt="header image"
    height="3072"
    width="4080"
  />

  <div class="flex justify-center align-middle text-center">
    <div
      class="rounded-xl py-6 px-9 mx-4 bg-slate-700 text-white md:w-3/4 -mt-12"
    >
      <h1 class="text-4xl md:text-5xl font-bold pb-4">{blok.title}</h1>
      <p class="text-lg md:text-xl my-4">{blok.description}</p>
      <p class="font-light">
        {
          new Date(blok.publishDate).toLocaleDateString("en-us", {
            dateStyle: "full",
          })
        }
      </p>
    </div>
  </div>
  <div class="mx-5 md:mx-48 my-9">
    <Fragment set:html={content} />
  </div>
</article>
